{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}/StudyOn{% endblock %}

{% block body %}
    <div class="row mb-5">
        <div class="col-12">

            <div class="row">
                <div class="col-12">
                    <h1>Курс. {{ course.title }}</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p>{{ course.description }}</p>
                </div>
            </div>

            {% if action is not null %}
                <div class="row">
                    <div class="col-12">
                        <!-- Button trigger modal -->
                        <form id="PaymentForm">
                            {% if course.price is not null and balance < course.price %}
                                <button type="button" class="course_pay btn btn-primary" data-toggle="modal" data-target="#PaymentModal" disabled>
                                    {{ action }}
                                </button>
                            {% elseif balance > course.price %}
                                <button type="button" class="course_pay btn btn-primary" data-toggle="modal" data-target="#PaymentModal">
                                    {{ action }}
                                </button>
                            {% endif %}
                        </form>

                        <!-- Modal -->
                        <form id="AgreeForm">
                            <div class="modal fade" id="PaymentModal" tabindex="-1" role="dialog" aria-labelledby="PaymentModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="PaymentModalLabel">Согласие пользователя</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Вы согласны на списание суммы за курс?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                            <button type="button" class="btn btn-primary" id="PayAgree" data-content="{{ course.id }}">Да</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            {% endif %}

            <div class="row">
                <div class="col-12">

                    <div class="row">
                        <div class="col-12">
                            <h3>Уроки</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <ol id="list_lessons">
                                <!-- List lessons -->
                                {% for lesson in lessons %}

                                    <div class="row">
                                        <div class="col-12">

                                            <li>
                                                <a href="{{ path('lesson_show', {'id': lesson.id}) }}"
                                                    class="lesson_title">
                                                    {{ lesson.title }}
                                                </a>
                                            </li>

                                        </div>
                                    </div>

                                {% endfor %}
                                <!-- ./List lessons -->
                            </ol>
                        </div>
                    </div>

                </div>
            </div>

            <hr/>

            <div class="row">

                <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                    <a href="{{ path('courses_index') }}" class="btn btn-outline-info w-100">
                        Cписок курсов
                    </a>
                </div>

                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                        <a href="{{ path('lesson_new', {'course_id': course.id}) }}" class="btn btn-outline-success w-100"
                           id="add_lesson">
                            Добавить урок
                        </a>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                        <a href="{{ path('course_edit', {'id': course.id}) }}" class="btn btn-outline-secondary w-100"
                           id="edit_course">
                            Редактировать
                        </a>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                        {{ include('course/_delete_form.html.twig') }}
                    </div>
                {% endif %}

            </div>

        </div>
    </div>
{% endblock %}