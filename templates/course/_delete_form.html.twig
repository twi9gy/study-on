<form method="post" action="{{ path('course_delete', {'id': course.id}) }}"
      onsubmit="return confirm('Вы уверены, что хотите удалить элемент?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn btn-outline-danger w-100" id="btn_delete_course">Удалить</button>
</form>