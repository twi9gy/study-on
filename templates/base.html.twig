<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}StudyOn{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="row">
                <div class="col-12 p-0">
                    <!-- NavBar -->
                    {% block header %}
                        <div class="header">
                            <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top ">
                                <div class="container-fluid">
                                    <a class="navbar-brand" href="{{ path('home') }}">Study-On</a>

                                    <ul class="navbar-nav w-100 justify-content-end">
                                        {% if app.user != null %}
                                            <li class="nav-item">
                                                <a class="nav-link text-white" >Привет, {{ app.user.username }}</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link active" href="{{ path('app_logout') }}">
                                                    <i class="fa fa-sign-out" aria-hidden="true"></i> Выход</a>
                                            </li>
                                            <li class="nav-item">
                                                <a id="private_office" class="nav-link active" href="{{ path('private_office') }}">
                                                    <i class="fa fa-sign-out" aria-hidden="true"></i>Личный кабинет</a>
                                            </li>
                                            {% else %}
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="{{ path('app_login') }}">
                                                        <i class="fa fa-sign-out" aria-hidden="true"></i>Вход</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="{{ path('app_register') }}">
                                                        <i class="fa fa-sign-out" aria-hidden="true"></i>Регистрация</a>
                                                </li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    {% endblock %}
                    <!-- ./NavBar -->
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12 mt-5">
                    <div class="container">
                        <!-- Content -->
                        <div class="content">

                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% for message in app.flashes('unsuccessful') %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% block body %}{% endblock %}
                        </div>
                        <!-- ./Content -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 p-0">
                    <!-- Footer -->
                    <div class="footer">
                        {% block footer %}
                            <div class="w-100 h-100 bg-dark">
                                <p class="text-center text-white pt-5">study-on © 2021</p>
                            </div>
                        {% endblock %}
                    </div>
                    <!-- ./Footer -->
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>