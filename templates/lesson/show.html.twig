{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }}/{{ lesson.course.title }}/StudyOn{% endblock %}

{% block body %}
    <div class="row mb-5">
        <div class="col-12">

            <div class="row">
                <div class="col-12">
                    <h1>Урок. {{ lesson.title }}</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p>Курс:
                        <a href="{{ path('course_show', { 'id': lesson.course.id }) }}">
                            {{ lesson.course.title }}
                        </a>
                    </p>
                </div>
            </div>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <div class="row">

                    <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                        <a href="{{ path('lesson_edit', {'id': lesson.id}) }}" class="btn btn-outline-secondary w-100"
                           id="edit_lesson">
                            Редактировать
                        </a>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 mt-2">
                        {{ include('lesson/_delete_form.html.twig') }}
                    </div>

                </div>
            {% endif %}

            <div class="row mt-3">
                <div class="col-12">
                    <p>{{ lesson.content }}</p>
                </div>
            </div>

        </div>
    </div>
{% endblock %}