{% extends 'base.html.twig' %}

{% block title %}Регистрация/StudyOn{% endblock %}

{% block body %}

<div class="row mb-5">
    <div class="col-12">

        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Регистрация</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}

                <div class="row">
                    <div class="col-12">
                        {{ form_widget(form) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-sm-6 mt-2">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Зерегистрироваться
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
</div>

{% endblock %}
