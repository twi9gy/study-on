{% extends 'base.html.twig' %}

{% block title %}Личный кабинет/StudyOn{% endblock %}

{% block body %}
<div class="row mb-5 justify-content-center">
    <div class="col-8">
        <div class="card">

            <div class="row">
                <div class="col">
                    <h3 class="text-center p-3 mt-2">Личный кабинет</h3>
                </div>
            </div>

            <hr />

            <div class="form-group row">
                <label for="email" class="col-sm-4 col-form-label text-right">Email:</label>
                <div class="col-sm-8">
                    <input id="email" value="{{ username }}" readonly/>
                </div>
            </div>

            <div class="form-group row">
                <label for="roles" class="col-sm-4 col-form-label text-right">Права:</label>
                <div class="col-sm-8">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <input id="roles" value="Администратор" readonly/>
                    {% else %}
                        <input id="roles" value="Пользователь" readonly/>
                    {% endif %}
                </div>
            </div>

            <div class="form-group row">
                <label for="balance" class="col-sm-4 col-form-label text-right">Баланс:</label>
                <div class="col-sm-8">
                    <input id="balance" value="{{ balance }}" readonly/>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-center">
                        <a class="transaction_history" href="{{ path('transaction_history') }}">
                            <i class="fa fa-user" aria-hidden="true"></i>История транзакций
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
